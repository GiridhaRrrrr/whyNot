        <% } %>
    </div>
</div>
<div class="sticky-button">
    <% if(currUser){ %>
        <a style="text-decoration: none;" href="/user/<%= currUserId %>">
            <button class="login-btn">
                <img src="https://plus.unsplash.com/premium_vector-1730127163758-5e2a1b4ad2a0?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGFuaW1hdGVkJTIwcHJvZmlsZSUyMHBpY3xlbnwwfHwwfHx8MA%3D%3D" alt="Profile Picture" class="profile-pic">&nbsp;&nbsp;
                <%= currUser%>
            </button>
        </a>
    <% } else { %>
        <form action="/user/login">
            <button class="login-btn">
            <i class="fas fa-user"></i>&nbsp;&nbsp;
            Log in
        </button>
        </form>
    <% } %>
    </button>
</div>

