<div class="sidebar">
    <div class="logo">
        <i class="fa-brands fa-google-wallet"></i> <p class="galindo-regular">WhyNot</p>
    </div>
    <div class="menu">
        <a class="pacifico-regular" href="/posts"><i class="fa-solid fa-house"></i>  Home</a>
        <a class="pacifico-regular" href="/user/allUsers"><i class="fa-solid fa-users"></i> All Users</a>
        <a class="pacifico-regular" href="/posts/new"><i class="fa-solid fa-circle-plus"></i> Create Post</a>
        <% if(currUser){ %>
            <a class="pacifico-regular" href="/user/logout"><i class="fa-solid fa-right-from-bracket"></i> Log-Out</a>           
        <% } else{%>
            <a class="pacifico-regular" href="/user/login"><i class="fa-solid fa-clipboard-list"></i> Log-in</a>
